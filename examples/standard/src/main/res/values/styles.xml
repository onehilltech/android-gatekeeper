<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar"/>

    <style name="Foo">
        <item name="android:textSize">@dimen/abc_text_size_display_1_material</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:shadowColor">@color/textColorPrimary</item>
        <item name="android:shadowDx">3.0</item>
        <item name="android:shadowDy">3.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <style name="AppTheme.Card">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    
    <style name="TextAppearance.AppCompat.Body1.Light">
    </style>

    <style name="Light">
        <item name="android:alpha">0.54</item>
    </style>
</resources>
